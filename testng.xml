<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TestSuite" thread-count="1" parallel="tests">
    <listeners>
        <listener class-name="ge.tbc.testautomation.Listeners.ReportListener" />
        <listener class-name="ge.tbc.testautomation.Listeners.SuiteListener" />
        <listener class-name="ge.tbc.testautomation.Listeners.TestListener" />

    </listeners>

    <test name="GroupTest">
        <groups>
            <define name="Selenide 1"/>
            <define name="Selenide 2"/>
            <define name="all">
                <include name="Selenide 1"/>
                <include name="Selenide 2"/>
            </define>
            <run>
                <include name="all"/>
            </run>
        </groups>
        <classes>
            <class name="SelenideTests"/>
            <class name="SelenideTests2"/>
            <class name="FailedTest"/>
        </classes>
    </test>

    <test name="endingWithFrontendTest" thread-count="6" parallel="classes">
        <groups>
            <run>
                <include name=".*FrontEnd"/>
            </run>
        </groups>
        <classes>
            <class name="SelenideTests"/>
            <class name="SelenideTests2"/>
        </classes>
    </test>
